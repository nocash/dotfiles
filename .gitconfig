# vim:noet:sts=2
[alias]
	a = add
	aa = add --all
	an = add --intent-to-add
	ann = add --all --intent-to-add :/
	ap = add --patch
	au = add --update .
	auu = add --update :/
	bb = bisect bad
	bg = bisect good
	br = branch
	brbr = branch-branch # custom script
	brc = branch-commits # custom script
	bs = bisect skip
	cb = symbolic-ref --quiet --short HEAD
	cf = commit --fixup
	ci = commit --verbose
	cia = commit --all --verbose
	ciam = commit --all --message
	cim = commit --message
	cin = commit --no-edit
	co = checkout
	cp = cherry-pick
	cs = commit --squash
	d = diff
	dc = diff --cached
	dm = "!git diff $( git merge-base $( git which-master ) HEAD )"
	dno = diff --name-only
	dns = diff --name-status
	fa = fetch --all --prune
	fd = clean --force -d
	fix = commit --amend --reuse-message=HEAD
	h = help
	l = log --graph --oneline --decorate
	l1 = log -1 --oneline
	l11 = log -1
	ll = log --graph --oneline --decorate --branches --tags
	lll = log --graph --oneline --decorate --all
	lo = log --oneline --decorate
	log = log
	m = merge --no-edit
	mb = "!f() { git merge-base $1 HEAD; }; f"
	mbm = "!git merge-base $( git which-master ) HEAD"
	mirror = "!for r in $( git mirrors ); do git push $r; done"
	mirrors = "!git config --list | awk -F . '/^remote\\.[^.]+\\.mirror=true/ { print $2 }'"
	mnf = merge --no-edit --no-ff
	mt = mergetool
	mv = mv
	ra = rebase --abort
	rb = rebase
	rc = rebase --continue
	re = reset
	ref = reflog
	rh = reset --hard
	ri = rebase --interactive
	ria = rebase --interactive --autosquash
	rm = rm
	roll = reset HEAD~1
	rs = rebase --skip
	s = status --short --branch
	sh = show
	sha = rev-parse
	sns = show --name-status
	ss = status
	st = stash
	stk = stash --keep-index
	stp = stash pop
	stu = stash --include-untracked
	uiau = update-index --assume-unchanged
	td = todos # custom script
	ull = pull --ff-only
	ush = push
	wd = rev-parse --show-toplevel
	wip = "!git add --all :/ && git commit --message 'WIP'"
[color]
	ui = auto
[core]
	autocrlf = input
	editor = vim
	eol = lf
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
	guitool = gvimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	guitool = gvimdiff
[mergetool]
	keepbackup = false
	prompt = false
[user]
	name = Beau Dacious
	email = dacious.beau@gmail.com
[github]
	user = nocash
[include]
	path = .gitconfig.local
[push]
	default = simple
