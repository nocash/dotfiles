[alias]
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	d = diff
	fa = fetch --all
	fix = commit --amend -C HEAD
	l = log --graph --relative-date  --pretty=format:'%C(yellow)%h%Creset %C(blue)%d%Creset %s %C(black)(%cd by %cn)%Creset'
	ll = !git l --all
	lll = !git fa && git ll
	mirror = "!for r in $( git mirrors ); do git push $r; done"
	mirrors = "!git config -l | awk -F . '/^remote\\.[^.]+\\.mirror=true/ { print $2 }'"
	st = status
[color]
	ui = auto
[core]
	autocrlf = false
	editor = vim
	eol = lf
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
	guitool = gvimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	guitool = gvimdiff
[mergetool]
	keepbackup = false
	prompt = false
