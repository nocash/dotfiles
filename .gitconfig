[alias]
	as = rebase --interactive --autosquash
	au = add --update
	br = branch
	cb = symbolic-ref --quiet --short HEAD
	cf = commit --fixup
	ci = commit
	co = checkout
	cp = cherry-pick
	bb = bisect bad
	bg = bisect good
	cs = commit --squash
	d = diff
	dc = diff --cached
	fa = fetch --all
	fap = fetch --all --prune
	fix = commit --amend -C HEAD
	l = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset'
	ll = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset' --branches --tags
	lll = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset' --all
	merged = "!git-merged-branches"
	mirror = "!for r in $( git mirrors ); do git push $r; done"
	mirrors = "!git config -l | awk -F . '/^remote\\.[^.]+\\.mirror=true/ { print $2 }'"
	ra = rebase --abort
	rb = rebase
	rc = rebase --continue
	rh = reset --hard
	ri = rebase --interactive
	rs = rebase --skip
	sha = rev-parse HEAD
	sns = show --name-status
	st = status
[color]
	ui = auto
[core]
	autocrlf = input
	editor = vim
	eol = lf
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
	guitool = gvimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	guitool = gvimdiff
[mergetool]
	keepbackup = false
	prompt = false
[user]
	name = Beau Dacious
	email = dacious.beau@gmail.com
[github]
	user = nocash
[include]
	path = .gitconfig.local
[push]
	default = simple

