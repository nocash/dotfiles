[alias]
	a = add
	aa = add --all
	an = add --intent-to-add
	ann = add --all --intent-to-add
	ap = add --patch
	au = add --update .
	auu = add --update :/
	bb = bisect bad
	bg = bisect good
	br = branch
	cb = symbolic-ref --quiet --short HEAD
	cf = commit --fixup
	ci = commit
	cia = commit --all
	ciam = commit --all --message
	cim = commit --message
	co = checkout
	cp = cherry-pick
	cs = commit --squash
	d = diff
	dc = diff --cached
	fa = fetch --all
	fap = fetch --all --prune
	fd = clean -fd
	fix = commit --amend -C HEAD
	h = help
	l = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset'
	l1 = log -1 --oneline
	l11 = log -1
	ll = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset' --branches --tags
	lll = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset' --all
	mirror = "!for r in $( git mirrors ); do git push $r; done"
	mirrors = "!git config --list | awk -F . '/^remote\\.[^.]+\\.mirror=true/ { print $2 }'"
	mv = mv
	ra = rebase --abort
	rb = rebase
	rc = rebase --continue
	re = reset
	rh = reset --hard
	ri = rebase --interactive
	ria = rebase --interactive --autosquash
	rm = rm
	roll = reset HEAD~1
	rs = rebase --skip
	s = status --short
	sh = show
	sha = rev-parse HEAD
	sns = show --name-status
	ss = status
	st = stash
	wd = rev-parse --show-toplevel
	wip = "!git add :/ && git commit -m 'WIP'"
[color]
	ui = auto
[core]
	autocrlf = input
	editor = vim
	eol = lf
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
	guitool = gvimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	guitool = gvimdiff
[mergetool]
	keepbackup = false
	prompt = false
[user]
	name = Beau Dacious
	email = dacious.beau@gmail.com
[github]
	user = nocash
[include]
	path = .gitconfig.local
[push]
	default = simple

